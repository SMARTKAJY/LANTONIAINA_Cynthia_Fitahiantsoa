#include <iostream>
using namespace std;

int main()
{

int C1;
int C2;
int C3;
std::cout <<"Entrez la longueur du premier coté C1 du triangle :"<<std::endl;
cin>>C1;
std::cout<<"Ensuite entrez la longueur du deuxieme coté C2 du triangle :"<<std::endl;
cin>>C2;
std::count<<"Et enfin celle du troisieme coté C3:"<<std::endl;
cin>>C3;

if (C1+C2>C3 && C2+C3>C1 && C1+C3>C2) {
 if (C1=C2 && C2=C3 && C1=C3){
count<<"C'est un triangle équilateral\n"<<endl;}
 else if(C1=C2 || C1=C3 || C2=C3){
 count<<"C'est un triangle isocèle\n"<<endl;} 
 else{
 count <<"C'est un triangle scalène\n" <<endl;}
  }
else{
count<<"Votre triangle n'est pas validé"<<endl;}
if(C1 >C2 && C1>C3) && ((C1 *C1)=(C2*C2) +(C3*C3))
    || (C2>C3 && C2 >C1) &&( (C2*C2 )=(C1*C1)+(C3*C3))
    ||(C3>C2 et C3 >C1) && ((C3*C3 )=(C1*C1)+(C2*C2)){
count<<"Et c'est un triangle rectangle "<<endl;}
else{
  count<<"Et ce n' est pas un triangle rectangle "<<endl;}
return 0 ;
}
